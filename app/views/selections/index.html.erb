<div id="wrapper">
  <div class="overlay"></div>
  <div class ="dashboard-container">
    <!-- Sidebar -->
    <nav class="navbar navbar-inverse fixed-top" id="sidebar-wrapper" role="navigation">
      <ul class="nav sidebar-nav">
        <div class="sidebar-header">
          <div class="sidebar-brand">
            <div class="logonav"><%= image_tag "logo.png"%></div>
          </div>
        </div>
        <div class="sidebox">
          <div class="sidelist">
            <li> <%= link_to "List-View", listview_path %> </li>
            <li> <i class="fas fa-map-marked fa-lg" style="color: white"></i><%= link_to "Calendar-View", selections_path %> </li>
            <li> <%= link_to "My itinerary" %></li>
            <li> <%= link_to "Save" %></li>
          </div>
          <div class="sideactions">
            <li><!-- <i class="fas fa-user-cog"></i><%= link_to "Settings" %></li>
            <li><!-- <i class="fas fa-sign-out-alt"> --></i><%= link_to "Logout" %></li>
          </div>
        </div>
      </ul>
    </nav>
    <!-- /#sidebar-wrapper -->
    <div class="minisidebar"></div>
    <div id="page-content-wrapper">
      <div class="hamburger-container">
        <button type="button" class="hamburger animated fadeInLeft is-closed" data-toggle="offcanvas">
          <span class="hamb-top"></span>
          <span class="hamb-middle"></span>
          <span class="hamb-bottom"></span>
        </button>
      </div>




      <%# Container for calender & map  %>
      <div class="calendar-map">

      <%# Div reated in order to display grid (time of day - rest of calendar) %>
      <div class = "top-half-dash-container">

        <%# Container to align the day-times %>
        <div class = "day-container">
          <%# Empty P created to help with alignment (1fr 1fr 1fr 1fr)  %>
         <p></p>
         <p><i class="fas fa-cloud-sun fa-lg" style="color: gray"></i></p>
         <p><i class="fas fa-sun fa-lg" style="color: gray"></i></p>
         <p><i class="fas fa-moon fa-lg" style="color: gray"></i></p>
        </div>


      <%# Div created to align the weeks to the calendar.  %>
        <div>

          <div class ="week-container">
            <div class="week__date">
              <p><%= @monday_selection[0].date %> <%= @monday_selection[0].day_date %></p>
            </div>

            <div class="week__date">
              <p><%= @tuesday_selection[0].date %> <%= @tuesday_selection[0].day_date %></p>
            </div>

            <div class="week__date">
              <p><%= @wednesday_selection[0].date %> <%= @wednesday_selection[0].day_date %></p>
            </div>

            <div class="week__date">
              <p><%= @thursday_selection[0].date %> <%= @thursday_selection[0].day_date %></p>
            </div>

            <div class="week__date">
              <p><%= @friday_selection[0].date %> <%= @friday_selection[0].day_date %></p>
            </div>

            <div class="week__date">
              <p><%= @saturday_selection[0].date %> <%= @saturday_selection[0].day_date %></p>
            </div>

            <div class="week__date">
              <p><%= @sunday_selection[0].date %> <%= @sunday_selection[0].day_date %></p>
            </div>

          </div>

            <%# Loading all of the sorted cards  %>

            <div class="card-container">
              <div class = "card-zone">
                <% @counter = 1 %>
                <% DAYS.each do |day|  %>

                  <% selection = Selection.where(user: current_user, time_of_day: day[1], date: day[0]).first %>
                  <% if selection %>
                    <div onclick = "window.mapHandler('<%= selection.activity.name%>', '<%= selection.activity.longitude%>', '<%= selection.activity.latitude%>' )" data-selection-id="<%= selection.id%>" class="card-cell card-itinerary image-box" style="background-image: url('<%=selection.activity.image_url%>');">
                      <p class= "card-inner-text"><%= selection.activity.name %></p>
                      <div class="card-icons">
                        <p> <%= link_to '', selection_path(selection.id), method: :delete, data: {confirm: "You sure?"}, class:"fas fa-trash card-none text-decor-none" %></p>
                        <p> <%= link_to '', random_path({time_of_day: day[1], day: day[0], selection: selection.id}), method: :post, class:"fas fa-random card-none text-decor-none" %></p>
                      </div>
                    </div>
                  <% else %>
                    <div data-id="selection-<%=@counter%>" class="card-cell card-itinerary add-icon" style="background-color: white; border: 2px dotted #ECBE46 ">
                       <p> <%= link_to '', selections_path({time_of_day: day[1], day: day[0]}), method: :post, class:"fas fa-plus-circle fa-2x text-decor-none" %></p>
                    </div>
                  <% end %>
                <% @counter +=1 %>
                <% end %>
            </div>
          </div>

        </div>
      </div>


        <%# ---------------------------- Clean Code  %>

          <%# Map  %>
          <div class = "map-border map-container">
           <div id="map" style="width: 100%; margin-left: 30px; height: 400px;"data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
          </div>
        </div>
      </div>
  </div>
</div>



