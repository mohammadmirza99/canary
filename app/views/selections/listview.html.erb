
<%# Container for the entire page (cards and map)  %>
<div class="list-container">

  <%# Sidebar (Can possibly be moved to shared) %>
    <div class="sidebar-bg sidebar-sticky">
      <h2>Logo</h2>
      <hr>
      <h5>Username + avatar</h5>
      <hr>

      <ul class= "sidebar-liststyle">
        <li> <%= link_to "List-View", listview_path %> </li>
        <li> <%= link_to "Calendar-View", selections_path %> </li>
        <li>  <%= link_to "My itinerary" %></li>
        <li> <%= link_to "Save" %></li>
        <hr>
         <li><i class="fas fa-user-cog"></i><%= link_to "Settings" %></li>
        <li><i class="fas fa-sign-out-alt"></i><%= link_to "Logout" %></li>
      </ul>
    </div>

  <div>
    <%# Looping through each selection %>
    <% @selections.each do |selection| %>

    <%# Card starting point  %>
      <div class="card-list-container">
        <div class="card-list-flex">

    <%# Image container  %>
          <div class="card-image">
            <h2>img</h2>
          </div>

    <%# Card info  %>
          <div>
            <h2><%=selection.activity.name%></h2>

            <p> <%=selection.activity.description%> </p>

            <p>Reviews</p>

          </div>

        </div>
      </div>

    <% end %>

  </div>

  <%# Map starts %>
  <div class="map-view">
    <div id="map" style="width: 100%; height: 100vh;"data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

</div>

