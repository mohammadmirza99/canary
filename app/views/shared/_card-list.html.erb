<%=  %>
<div class="card-text-container">
  <h2><%=selection.activity.name%></h2>
  <p> <%=selection.activity.description%> </p>
  <p> <%=selection.activity.address%></p>
</div>

<div class = "card-text-container ">

  <div class = "card-list-right">

    <div>
      <p>Website</p>
    </div>

    <div>
      <% if selection.activity.price_category == "1" %>
        <p><% 1.times{%> <i class="fas fa-dollar-sign"></i><%}%> </p>

      <% elsif selection.activity.price_category == "2" %>
        <p><% 2.times{%> <i class="fas fa-dollar-sign"></i><%}%> </p>

      <% elsif selection.activity.price_category == "3" %>
        <p><% 3.times{%> <i class="fas fa-dollar-sign"></i><%}%> </p>
      <% end %>
    </div>
    <div>
      <% if selection.activity.rate == 1 %>
        <p><% 1.times{%> <i class="fas fas fa-star"></i><%}%> </p>

      <% elsif selection.activity.rate == 2 %>
        <p><% 2.times{%> <i class="fas fas fa-star"></i><%}%> </p>

      <% elsif selection.activity.rate == 3 %>
        <p><% 3.times{%> <i class="fas fas fa-star"></i><%}%> </p>
        <% elsif selection.activity.rate == 4 %>
        <p><% 4.times{%> <i class="fas fas fa-star"></i><%}%> </p>
        <% elsif selection.activity.rate == 5 %>
        <p><% 5.times{%> <i class="fas fas fa-star"></i><%}%> </p>
      <% end %>
    </div>

  </div>

</div>

